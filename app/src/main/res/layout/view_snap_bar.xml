<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:gravity="center_vertical"
    tools:background="@color/light_purple"
    tools:layout_gravity="top">

    <RelativeLayout
        android:id="@+id/bar_relative"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bar_profile_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_profile"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="5dp"
                android:text="Sohbetler"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/bar_rotate_camera_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foregroundGravity="right"
                    android:src="@drawable/ic_camera_rotate"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/bar_add_friend_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:foregroundGravity="right"
                    android:src="@drawable/ic_add_friends"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/bar_line"
        android:layout_below="@+id/bar_relative"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6ff4f4f4"/>
</RelativeLayout>